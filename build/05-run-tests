#!/bin/bash

PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/games:$PATH

cd $2

/usr/bin/php /usr/bin/composer update --no-progress --quiet --no-ansi || exit 1
/usr/local/bin/bower install --allow-root || exit 1

/usr/bin/php ./app/console doctrine:migrations:migrate --no-interaction --env=test || exit 1
/usr/bin/php ./app/console assets:install --no-interaction --env=test || exit 1
/usr/bin/php ./vendor/phpunit/phpunit/phpunit || exit 1
