{% extends '::base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-lg-12">

        <h4 class="page-header">Your testcases</h4>

        <ul class="list-group">
            {% for testcase in testcases %}
                <li id="testcases-list-entry" class="list-group-item {% if loop.index0 is even %}even{% endif %}">
                    <span class="badge">{{ testcase.cadence }}</span>

                    <h5><a href="{{ path('testcases.edit', {'testcaseId': testcase.id}) }}">{{ testcase.title }}</a></h5>

                    <div class="pull-right">
                        {% if (testcase.enabled) %}
                            <p>
                                <span class="label label-primary">Enabled</span>
                            </p>
                            <p>
                                <a class="btn btn-default btn-xs" href="{{ path('testcases.disable', {'testcaseId': testcase.id}) }}">Disable</a>
                            </p>
                        {% else %}
                            <p>
                                <span class="label label-default">Disabled</span>
                            </p>
                            <p>
                                <a class="btn btn-success btn-xs" href="{{ path('testcases.enable', {'testcaseId': testcase.id}) }}">Enable</a>
                            </p>
                        {% endif %}
                    </div>
                </li>
            {% endfor %}
        </ul>

    </div>
</div>

{% endblock %}
