<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="Manuel Kiessling">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <title>{% block title %}JourneyMonitor{% endblock %}</title>


    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/vendor/bootstrap/dist/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/app/default.css') }}">
    {% endblock %}

    {% block javascripts_head %}
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    <script src="{{ asset('bundles/app/vendor/jquery/dist/jquery.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
    {% endblock %}

  </head>

  <body>

    <div class="container">
      <div class="header clearfix">

        {# see http://getbootstrap.com/components/#navbar-default #}
        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a id="brandname" class="navbar-brand" href="{{ path('homepage') }}"><h3>JourneyMonitor</h3></a>
            </div>

            <div class="collapse navbar-collapse" id="navbar">
              <ul class="nav navbar-nav pull-right">
                {% if app.user %}
                  <li><a href="{{ path('testcases.index') }}">Your testcases</a></li>
                  <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                {% else %}
                  <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                {% endif %}
              </ul>
            </div> <!-- /.navbar-collapse -->
          </div> <!-- /.container-fluid -->
        </nav>
        {% if app.user %}
          <div id="loggedin-info" class="pull-right">
            <small>Logged in as <strong>{{ app.user.username }}</strong></small>
          </div>
        {% endif %}
      </div>



      <div class="row">
        <div class="col-lg-12">
          {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success" role="alert">
              {{ flashMessage }}
            </div>
          {% endfor %}
          {% for flashMessage in app.session.flashbag.get('info') %}
            <div class="alert alert-info" role="alert">
              {{ flashMessage }}
            </div>
          {% endfor %}
          {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger" role="alert">
              {{ flashMessage }}
            </div>
          {% endfor %}
        </div>
      </div>

      {% block body %}{% endblock %}

      <footer class="footer">
        <p>
          &copy; 2015 The JourneyMonitor Team
          -
          <a href="mailto:replies-welcome@journeymonitor.com">Get in touch</a>
        </p>
      </footer>

    </div> <!-- /container -->


    {% block javascripts_foot %}
    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="{{ asset('bundles/app/ie10-viewport-bug-workaround.js') }}"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-2127388-13', 'auto');
      ga('send', 'pageview');

    </script>
    {% endblock %}
  </body>
</html>
