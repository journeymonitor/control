<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]> <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]> <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9]> <html class="no-js ie9" lang="en"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="Manuel Kiessling">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <title>{% block title %}JourneyMonitor{% endblock %}</title>

    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Fugaz+One' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('bundles/app/vendor/bootstrap/dist/css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/default.css') }}">
    {% endblock %}

    {% block javascripts_head %}
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    {% endblock %}
</head>
<body>
    {% if app.user %}
        <div id="loggedin-info">
            <small>Logged in as <b>{{ app.user.username }}</b></small>
        </div>
    {% endif %}

    <div class="messages">
        <div class="container">

            {% if (isDemoMode is defined and isDemoMode) %}
                <div class="alert alert-info" role="alert">
                    You are currently in demo mode.
                </div>
            {% endif %}
            {% for flashMessage in app.session.flashbag.get('success') %}
                <div class="alert alert-success" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('info') %}
                <div class="alert alert-info" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="alert alert-danger" role="alert">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% block messages %}{% endblock %}

        </div>
    </div>

    <header class="clearfix">
        {# see http://getbootstrap.com/components/#navbar-default #}
        <nav id="journeymonitor-header" class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brandname navbar-brand" href="{{ path('homepage') }}"><span class="journeymonitor-brandname-journey">Journey</span><span class="glyphicon glyphicon glyphicon-check" aria-hidden="true"></span>Monitor</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="nav navbar-nav pull-right">
                        <li><a href="{{ path('testcases.demo.index') }}">Demo</a></li>
                        {% if app.user %}
                            <li><a href="{{ path('testcases.index') }}">Your testcases</a></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                        {% else %}
                            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    {% block body %}{% endblock %}

    <div class="journeymonitor-content-container journeymonitor-content-container-footer container-fluid">
        <footer>
            <div class="container">
                &copy; {{ "now"|date("Y") }} The <strong>Journey<span class="glyphicon glyphicon glyphicon-check" aria-hidden="true"></span>Monitor</strong> Team
                &nbsp;
                <a id="journeymonitor-contact-link" href="mailto:replies-welcome@journeymonitor.com">Get&nbsp;in&nbsp;touch</a>
                &nbsp;
                <a href="{{ path('imprint') }}">Imprint</a>
            </div>
        </footer>
    </div>

    {% block javascripts_foot %}
        <script src="{{ asset('bundles/app/vendor/jquery/dist/jquery.js') }}"></script>
        <script src="{{ asset('bundles/app/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip();
                $('[data-toggle="popover"]').popover();
            })
        </script>

        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="{{ asset('bundles/app/ie10-viewport-bug-workaround.js') }}"></script>

        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-2127388-13', 'auto');
            ga('send', 'pageview');
        </script>
    {% endblock %}
    {% block javascripts_additional %}{% endblock %}
</body>
</html>
